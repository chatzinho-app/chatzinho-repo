{
  "extends": ["expo/tsconfig.base"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/common/components/ui/*"],
      "@components/*": ["./src/common/components/*"],
      "@assets/*": ["./src/common/assets/*"],
      "@common/*": ["./src/common/*"],
      "@app/*": ["./src/app/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
